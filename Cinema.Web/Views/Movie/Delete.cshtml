@model MovieVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Movie</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Movie.Title" disabled class="form-control border-0 shadow" />
                    <label asp-for="@Model.Movie.Title" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Movie.Duration" disabled class="form-control border-0 shadow" />
                    <label asp-for="@Model.Movie.Duration" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Movie.Description" disabled class="form-control border-0 shadow" />
                    <label asp-for="@Model.Movie.Description" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Movie.ReleaseDate" disabled class="form-control border-0 shadow" />
                    <label asp-for="@Model.Movie.ReleaseDate" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="@Model.Movie.GenreId" asp-items="@Model.Genres" disabled class="form-control border-0 shadow">
                    </select>
                    <label asp-for="@Model.Movie.GenreId" class="ms-2"></label>
                    <span asp-validation-for="@Model.Movie.GenreId" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Movie" asp-action="Index" class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}