@model List<MovieDTO>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Movies List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Movie" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  Create New Movie
                </a>
            </div>
        </div>

        <table class="table table-striped table-dark">
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Duration</th>
                <th scope="col">Genre</th>
                <th scope="col">Relesae Date</th>
                <th scope="col"></th>
            </tr>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr scope="row">
                        <td>@movie.Title</td>
                        <td>@movie.Duration</td>
                        <td>@movie.Description</td>
                        <td>@movie.ReleaseDate</td>
                        <td>
                            <a asp-controller="Movie" asp-action="Edit" asp-route-id="@movie.Id" class="btn bg-primary">Edit</a>
                            <a href="/movie/delete/@movie.Id" class="btn bg-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
